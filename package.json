{
  "name": "react-redux-starter",
  "version": "2.0.0",
  "description": "React-Redux starter with redux-observable, flowtype and react-router-v4",
  "main": "webpack.config.js",
  "scripts": {
    "start": "webpack-dev-server --open --colors --no-info",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianngiaw/react-redux-starter.git"
  },
  "keywords": [
    "react",
    "redux",
    "redux-observable",
    "flowtype",
    "react-router-v4"
  ],
  "author": "Ian Ngiaw",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ianngiaw/react-redux-starter/issues"
  },
  "homepage": "https://github.com/ianngiaw/react-redux-starter#readme",
  "dependencies": {
    "react": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "webpack": "^1.13.2"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.6.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.3.0",
    "html-webpack-plugin": "^2.22.0",
    "node-sass": "^3.10.0",
    "react-hot-loader": "^3.0.0-beta.5",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack-dev-server": "^1.16.1"
  },
  "babel": {
    "plugins": [
      "react-hot-loader/babel"
    ],
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        120
      ]
    }
  }
}
